@model ShopMyPham_MVC.Framework.Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var catrgories = (List<ShopMyPham_MVC.Framework.Category>)ViewBag.Categories;
}

<div class="content">
    <div class="content_top">
        <div class="back-links">
            <p><a href="index.html">Home</a> &gt;&gt; <a href="#">Shop quần áo</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        <div class="cont-desc span_1_of_2">
            <div class="grid images_3_of_2">
                <img alt="@Model.Name" src="@Model.Image">
            </div>
            <div class="desc span_3_of_2">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>
                <div class="price">
                    <p>Price: <span>@Model.Price</span></p>
                </div>
                <div class="available">
                    <p>Available Options :</p>
                    <ul>
                        <li>
                            Color:
                            <select>
                                <option>Silver</option>
                                <option>Black</option>
                                <option>Dark Black</option>
                                <option>Red</option>
                            </select>
                        </li>
                        <li>
                            Quality:<select>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </li>
                    </ul>
                </div>
                <div class="share">
                    <p>Share Product :</p>
                    <ul>
                        <li><a href="#"><img alt="" src="/Data/images/youtube.png"></a></li>
                        <li><a href="#"><img alt="" src="/Data/images/facebook.png"></a></li>
                        <li><a href="#"><img alt="" src="/Data/images/twitter.png"></a></li>
                        <li><a href="#"><img alt="" src="/Data/images/linkedin.png"></a></li>
                    </ul>
                </div>
                <div class="add-cart">
                    <div class="rating">
                        <p>Rating:<img src="/Data/images/rating.png"><span>[3 of 5 Stars]</span></p>
                    </div>
                    <div class="button"><span><a href="#" onclick="addCart(@Model.ID)" data-id="@Model.ID" class="cart-button">Add to Cart</a></span></div>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="product-desc">
                <h2>Product Details</h2>
                <p>@Html.Raw(Model.Detail)</p>
            </div>
        </div>
