
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="login_panel" style="margin:0 auto;">
    <h3>Existing Customers</h3>
    <p>Sign in with the form below.</p>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "alert-danger" });
        @*<form id="member" method="get" action="hello">*@
        <input type="text" class="field" value="Username" name="txtUser" />
            <input type="password" class="field" value="Password" name="txtPass" />
            <div class="buttons"><div><button class="grey" type="submit">Sign In</button></div></div>

    }



</div>
<div class="clear"></div>

