
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstFeatureProduct = (List<ShopMyPham_MVC.ServiceShopBanHang.Product>)ViewBag.FeatureProduct;
    var lstNewProduct = (List<ShopMyPham_MVC.Framework.Product>)ViewBag.NewProduct;
}

@section htmlheader
{
    <div class="header_bottom">
        <div class="header_bottom_left">
            <div class="section group">
                <div class="listview_1_of_2 images_1_of_2">
                    <div class="listimg listimg_2_of_1">
                        <a href="/ao-khoac-nu-11"> <img src="/Data/images/ao_khoac_5.jpg" alt="" /></a>
                    </div>
                    <div class="text list_2_of_1">
                        <h2>Áo khoác</h2>
                        <p>Áo khoác nữ thời trang sành điệu</p>
                        <div class="button"><span><a href="/ao-khoac-nu-11">Xem thêm</a></span></div>
                    </div>
                </div>
                <div class="listview_1_of_2 images_1_of_2">
                    <div class="listimg listimg_2_of_1">
                        <a href="/so-mi-7"><img src="/Data/images/so_mi_1.jpg" alt="" /></a>
                    </div>
                    <div class="text list_2_of_1">
                        <h2>Sơ mi</h2>
                        <p>Sơ mi nam lịch lãm phong cách</p>
                        <div class="button"><span><a href="/so-mi-7">Xem thêm</a></span></div>
                    </div>
                </div>
            </div>
            <div class="section group">
                <div class="listview_1_of_2 images_1_of_2">
                    <div class="listimg listimg_2_of_1">
                        <a href="/quan-bo-3"> <img src="/Data/images/quan_bo_1.jpg" alt="" /></a>
                    </div>
                    <div class="text list_2_of_1">  
                        <h2>Quần bò </h2>
                        <p>Quần bò style ngầu , cực cool</p>
                        <div class="button"><span><a href="/quan-bo-3">Xem thêm</a></span></div>
                    </div>
                </div>
                <div class="listview_1_of_2 images_1_of_2">
                    <div class="listimg listimg_2_of_1">
                        <a href="/quan-ao-tre-con-9"><img src="/Data/images/quan_so_sinh_1.jpg" alt="" /></a>
                    </div>
                    <div class="text list_2_of_1">
                        <h2>Đồ trẻ em</h2>
                        <p>Đồ trẻ em giá rẻ phù hợp với nhiều lứa tuổi </p>
                        <div class="button"><span><a href="/quan-ao-tre-con-9">Xem thêm</a></span></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="header_bottom_right_images">
            <!-- FlexSlider -->
            @{Html.RenderAction("Banner", "Home");}

            <!-- FlexSlider -->
        </div>
        <div class="clear"></div>
    </div>
}
<div class="content_top">
    <div class="heading">
        <h3>Feature Products</h3>
    </div>

    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in lstFeatureProduct)
    {
        var url = "/san-pham/" + item.ShortName + "-" + item.ID;
        var price = item.Price + "VND";
        var promotionPrice = item.PromotionPrice + "VND";
        <div class="grid_1_of_4 images_1_of_4">
            <div class="product-img">
                <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
            </div>
            <h2>@item.Name</h2>
            <p>@item.Description</p>
            <p><span class="price">@price</span></p>
            <div class="button"><span><img src="/Accset/Client/images/cart.jpg" alt="" /><a href="#" onclick="addCart(@item.ID)" data-id="@item.ID" class="cart-button">Add Cart</a></span> </div>
            <div class="button"><span><a href="@url" class="details">Chi tiết</a></span></div>
        </div>
    }

</div>
<div class="content_bottom">
    <div class="heading">
        <h3>New Products</h3>
    </div>

    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item1 in lstNewProduct)
    {
        var url = "san-pham/" + item1.ShortName + "-" + item1.ID;
        var price = item1.Price + "VND";
        var promotionPrice = item1.PromotionPrice + "VND";
        <div class="grid_1_of_4 images_1_of_4">
            <div class="product-img">
                <a href="@url"><img src="@item1.Image" alt="@item1.Name" /></a>
            </div>
            <h2>@item1.Name</h2>
            <p>@item1.Description</p>
            <p><span class="price">@price</span></p>
            <div class="button"><span><img src="/Accset/Client/images/cart.jpg" alt="" /><a href="#" onclick="addCart(@item1.ID)" data-id="@item1.ID" class="cart-button">Add Cart</a></span> </div>
            <div class="button"><span><a href="@url" class="details">Chi tiết</a></span></div>
        </div>
    }
</div>

