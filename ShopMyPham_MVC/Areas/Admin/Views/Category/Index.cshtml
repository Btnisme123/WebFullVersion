@model IEnumerable<ShopMyPham_MVC.Areas.Admin.Models.CategoryModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="/Accset/Admin/js/controller/Category.js"></script>

<div class="col-md-12 graphs" style="padding:0;">
    <div class="xs">
        <h3 style="font-weight:300;margin-bottom:15px;margin-left:7px;">Categories Managment <a data-toggle="modal" data-target="#myModal" class="btn btn-default btn-sm" style="margin-left:10px;">Add New</a></h3>
        <p>This is the page which shows the list of categories in the system</p>

        <div class="row" style="margin:0;">
            <div class="col-md-12" style="padding:0;">
                <div class="panel panel-primary list-panel" id="list-panel" style="margin-top:15px;">
                    <div class="panel-heading list-panel-heading" style="background:#355C7D;border:none;border-radius:unset;">
                        <h3 class="panel-title list-panel-title" style="color:#fff;margin-bottom:0;padding:10px;">Category</h3>
                    </div>
                    <div class="panel-body">
                        <table id="data-table" class="table table-striped table-bordered" style="width:100%"></table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg" style="background:#f0f0f0;padding:30px;">
                <div class="graphs">
                    <div class="xs">
                        <h3>Add New Category</h3>
                        <div class="tab-content">
                            <div id="horizontal-form" class="tab-pane active">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 control-label" for="selector1">Category Name <span class="required">*</span></label>
                                        <div class="col-sm-8">
                                            <input type="text" id="titleCategory" placeholder="Title Category" class="form-control1" />
                                            <label id="validGroupName" class="required" style="display: none"></label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 control-label" for="selector1">Short Name <span class="required">*</span></label>
                                        <div class="col-sm-8">
                                            <input type="text" id="ShortNameCategory" placeholder="Short Name Category" class="form-control1" />
                                            <label id="validGroupName" class="required" style="display: none"></label>
                                        </div>
                                    </div>
                                    @*<div class="form-group row">
                                            <label class="col-sm-2 control-label" for="selector1">Status<span class="required">*</span></label>
                                            <div class="col-sm-8">
                                                <select class="form-control1" id="Status" name="statusvalue" style="width:100px;">
                                                    <option value="1">Active</option>
                                                    <option value="2">Deactive</option>
                                                </select>
                                            </div>
                                        </div>*@
                                    <div style="margin:20px auto">
                                        <input type="button" class="btn btn-primary" onclick="AddCategory()" value="Create" />
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>