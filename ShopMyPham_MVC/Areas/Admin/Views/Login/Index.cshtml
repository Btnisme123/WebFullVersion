@model ShopMyPham_MVC.Areas.Admin.Models.LoginModel
<!DOCTYPE HTML>
<html>
<head>
    <title>Đăng Nhập</title>
    <link href="/Accset/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Flash Registration Form  Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!--web-fonts-->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
</head>
<link href='//fonts.googleapis.com/css?family=Josefin+Sans:400,100,100italic,300,300italic,400italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
<body>
    <!---header--->
    <div class="header">
        <h1 style="font-family:'Times New Roman', Times, serif;font-size:25px;"></h1>
    </div>
    <!---header--->
    <!---main--->
    <div class="main">
        <div class="main-section">
            <div class="login-section">
                <h2>Đăng Nhập</h2>
                <div class="login-middle">
                    <p>Chào mừng bạn đến với chúng tôi</p>
                    @*<form>
                            <input type="text" placeholder="Name">
                            <input type="password" placeholder="Password">
                        </form>*@
                    <section class="login_content">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                      {
                            @Html.ValidationSummary(true, "", new { @class = "alert-danger" });
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username", @autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                                </div> 
                                <div class="login-right" style="margin-left: 130px;float:none;">
                                    <form>
                                        <input type="submit" value="Login">
                                    </form>
                                </div>
                                <div class="clearfix"></div>
                            </fieldset>
                        }
                    </section>
                </div>
                <div class="login-bottom" style="padding-bottom: 16px;">
                    <div class="login-left" style="float:none;">
                        <p>Forgot your password?</p>
                        <a href="#">Sign Up Now!</a>
                    </div>
                </div>
                <div class="login-top">
                    <ul>
                        <li><a class="face" href="#"><span class="face"> </span>Login with Facebook</a></li>
                        <li><a class="twit" href="#"><span class="twit"> </span>Login with Twitter</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <p>&copy 2016 Flat Login Box. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </div>

    <!---main--->
</body>
</html>