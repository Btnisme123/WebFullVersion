@model PagedList.IPagedList<ShopMyPham_MVC.Framework.Menu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    <h4 class="title1">Menu</h4>
    <div style="margin-bottom:10px;">
        <a href="/Admin/Menu/Create" class="btn btn-primary">Thêm mới</a>
    </div>
}
<div class="panel-body widget-shadow">
    <table class="table">
        <thead>
            <tr>
                <th>Menu </th>
                <th>Link</th>
                <th>Thứ tự</th>
                <th>Target</th>
                <th>ParentsID</th>
                <th>Trạng thái</th>
                
                <th>Action </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="" id="row_@item.ID">
                    <td>@item.Text</td>
                    <td>@item.Link</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.Target</td>
                    <td>@item.ParentID</td>
                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                    <td>
                        <a href="/Admin/Menu/Edit/@item.ID">Sửa</a>
                        |
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                   {
                       Confirm = "Bạn có muốn xóa bản ghi này không ?",
                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                       HttpMethod = "Delete"
                   })
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.searchString }))
</div>

