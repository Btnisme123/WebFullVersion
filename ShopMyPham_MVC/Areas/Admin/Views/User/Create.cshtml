@model ShopMyPham_MVC.Framework.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header

{
    <h3 class="title1">Thêm mới người dùng</h3>
}
<div class="forms">
    <div class="form-grids row widget-shadow" data-example-id="basic-forms" style="margin-top: -10px;">
        <div class="form-title">
            <h4>User:</h4>
        </div>
        <div class="form-body">
            @using (Html.BeginForm("Create", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <form class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "User name" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "Password" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.GroupID, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.GroupID, null, new { @class = "form-control1", @autofocus = "autofocus" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "Full Name" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "Adreess" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "Email addresss" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control1", @autofocus = "autofocus", @placeholder = "Phone number" })

                            </div>
                            <div class="col-md-2">
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10" style="margin:10px auto;">
                            <button type="submit" class="btn btn-default btn-sm">Create</button>
                            <button type="submit" class="btn btn-default  btn-sm">Cancel</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
